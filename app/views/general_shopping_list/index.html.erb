<div class="container">
<h1 class="mt-3 mb-2 text-center">Shopping List</h1>
<div class="d-flex justify-content-around mt-5 mb-5">
  <h2>Amount of food Items to buy: num</h2>
  <h2>Total value of food needed: $num</h2>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Food</th>
      <th scope="col">Quantity</th>
      <th scope="col"> Price</th>
    </tr>
  </thead>
  <tbody>
    <% @recipes.each do | recipe | %>
    <tr>
      <th scope="row">
        <%= recipe.name %>
      </th>
      <td> <%= recipe.name %> </td>
      <td> $ <%= recipe.name %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>