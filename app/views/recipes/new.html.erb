<%= link_to 'Back', recipes_path %>

<section class="create-post">
  <h2 class="text-center">Create A Recipe</h2>

  <div class="fs-4 p-3 border border-1 container my-2 p-2 ">
    <%= form_with model: @recipe, url: recipes_path, scope: :recipe do |form| %>
    <span>Fields marked with asterick<small class="text-danger">*</small> are required</span>
        <div class="mb-3">
          <%= form.label :name, 'Name', class: "form-label" %><span class="text-danger">*</span>
          <%= form.text_field :name, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :description, 'Description', class: "form-label" %><span class="text-danger">*</span>
          <%= form.text_area :description, class: "form-control", required: true, size: "25x10" %>
        </div>

        <div class="mb-3">
          <%= form.label :cooking_time, 'Cooking time(mins)', class: "form-label" %><span class="text-danger">*</span>
          <%= form.number_field :cooking_time, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :preparation_time, 'Preparation time(mins)', class: "form-label" %><span class="text-danger">*</span>
          <%= form.number_field :preparation_time, class: "form-control", required: true %>
        </div>

        <div class="form-check form-switch fs-6 align-self-start">
          <%= form.check_box :public, role: "switch", id: "flexSwitchCheckDefault", class: "form-check-input" %>
          <%= form.label :public, class: "form-check-label fw-semi-bold", for: "flexSwitchCheckDefault" %>
        </div>

        <%= form.submit "Create Recipe", disable_with: "Please wait...", class: "btn btn-primary" %>
    <% end %>
  </div>
</section>
